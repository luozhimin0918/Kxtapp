<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?attr/yw_bg"
    android:orientation="horizontal" >

    <CheckBox
        android:id="@+id/select_all"
        style="@style/CustomCheckboxTheme"
        android:layout_width="wrap_content"
        android:layout_height="100dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:gravity="center"
        android:visibility="gone" />

    <LinearLayout
        android:id="@+id/wz_sc_ll_delet"
        android:layout_width="match_parent"
        android:layout_height="75dp"
        android:layout_margin="8dp"
        android:gravity="center"
        android:orientation="horizontal" >

        <ImageView
            android:id="@+id/img_frag_jwls"
            android:layout_width="100dp"
            android:layout_height="75dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/tv_frag_jwls_title"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_marginLeft="8dp"
                android:layout_weight="1"
                android:text="欧盟欲与中国争夺在拉美的影响力"
                android:textColor="?attr/flash_tv"
                android:textSize="@dimen/textSize" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal" >

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom"
                    android:layout_marginLeft="8dp"
                    android:layout_weight="1" >

                    <TextView
                        android:id="@+id/tv_frag_jwls_time"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="2015-6-19 19:11"
                        android:textColor="#999999"
                        android:textSize="@dimen/textSize_b" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/ll_item_xia1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="8dp"
                    android:background="#116bcc"
                    android:visibility="invisible" >

                    <TextView
                        android:id="@+id/frame_item_xia1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="1dp"
                        android:background="?attr/flash_bg"
                        android:paddingLeft="2dp"
                        android:paddingRight="2dp"
                        android:text="外汇"
                        android:textColor="#116bcc"
                        android:textSize="@dimen/textSize_b"
                        android:visibility="invisible" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/ll_item_xia2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="8dp"
                    android:background="#116bcc" >

                    <TextView
                        android:id="@+id/frame_item_xia2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="1dp"
                        android:background="?attr/flash_bg"
                        android:paddingLeft="2dp"
                        android:paddingRight="2dp"
                        android:text="外汇"
                        android:textColor="#116bcc"
                        android:textSize="@dimen/textSize_b" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

</LinearLayout>