<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?attr/yw_bg"
    android:orientation="horizontal" >

    <LinearLayout
        android:id="@+id/sc_yw_lin"
        android:layout_width="wrap_content"
        android:layout_height="75dp"
        android:orientation="horizontal" >

        <CheckBox
            android:id="@+id/check_sc"
            style="@style/CustomDeleteboxTheme"
            android:layout_width="42dp"
            android:layout_height="42dp"
            android:layout_gravity="center"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:clickable="false"
            android:focusable="false"
            android:scaleX="0.8"
            android:scaleY="0.8" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/sc_kx_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:text=""
            android:textColor="?attr/dp_tv"
            android:textSize="@dimen/textSize" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="8dp" >

            <TextView
                android:id="@+id/sc_kx_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:gravity="right"
                android:text="2015-6-6 18:15"
                android:textColor="#999999"
                android:textSize="@dimen/textSize_b" />
        </RelativeLayout>
    </LinearLayout>

</LinearLayout>