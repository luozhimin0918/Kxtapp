<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="8dp"
    android:background="?attr/flash_bg"
    >
    <com.jyh.kxt.customtool.TypeTextView android:id="@+id/sp_main_type"
        android:layout_width="match_parent"
        android:layout_height="36dp"
        android:paddingLeft="8dp"
        android:textSize="18sp"
        android:gravity="center_vertical"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        android:textColor="?attr/dp_tv"/>
    <com.jyh.kxt.customtool.SelfGridView android:id="@+id/sp_gridview"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:numColumns="2"
        android:horizontalSpacing="4dp"
        android:listSelector="@android:color/transparent"
        />
    <TextView android:id="@+id/sp_more"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:layout_gravity="center_horizontal"
        android:text="展开更多  "
        android:textSize="15sp"
        android:textColor="#116bcc"
        android:gravity="center"
        android:drawableRight="@drawable/sp_more"
        />
        
</LinearLayout>