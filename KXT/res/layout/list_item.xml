<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="?attr/flash_bg"
    android:minHeight="50dip"
    android:orientation="horizontal" >

    <TextView
        android:id="@+id/item_title"
        android:layout_width="120dp"
        android:layout_height="fill_parent"
        android:gravity="center"
        android:textColor="#015699"
        android:textSize="15sp" />

    <com.jyh.kxt.customtool.CHScrollView
        android:id="@+id/item_scroll"
        android:layout_width="0dp"
        android:layout_height="fill_parent"
        android:layout_weight="1"
        android:background="?attr/flash_bg"
        android:cacheColorHint="@android:color/transparent"
        android:fadingEdge="none"
        android:scrollbars="none" >

        <LinearLayout
            android:id="@+id/item_ll"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_margin="4dp"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/item_data1"
                android:layout_width="110dip"
                android:layout_height="fill_parent"
                android:layout_margin="2dp"
                android:gravity="center"
                android:textColor="?attr/flash_tv"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/item_data2"
                android:layout_width="110dip"
                android:layout_height="fill_parent"
                android:layout_margin="2dp"
                android:gravity="center"
                android:textColor="?attr/flash_tv"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/item_data3"
                android:layout_width="110dip"
                android:layout_height="fill_parent"
                android:layout_margin="2dp"
                android:gravity="center"
                android:textColor="?attr/flash_tv"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/item_data4"
                android:layout_width="110dip"
                android:layout_height="fill_parent"
                android:layout_margin="2dp"
                android:gravity="center"
                android:textColor="?attr/flash_tv"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/item_data5"
                android:layout_width="110dip"
                android:layout_height="fill_parent"
                android:layout_margin="2dp"
                android:gravity="center"
                android:textColor="?attr/flash_tv"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/item_data6"
                android:layout_width="110dip"
                android:layout_height="fill_parent"
                android:layout_margin="2dp"
                android:gravity="center"
                android:textColor="?attr/flash_tv"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/item_data7"
                android:layout_width="110dip"
                android:layout_height="fill_parent"
                android:layout_margin="2dp"
                android:gravity="center"
                android:textColor="?attr/flash_tv"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/item_data8"
                android:layout_width="110dip"
                android:layout_height="fill_parent"
                android:layout_margin="2dp"
                android:gravity="center"
                android:textColor="?attr/flash_tv"
                android:textSize="15sp" />
        </LinearLayout>
    </com.jyh.kxt.customtool.CHScrollView>

</LinearLayout>